<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.iut.referendum.controleur.ControleurClient">
    <children>
        <Label text="Choisir un Référendum" />
        <ListView fx:id="listViewReferendums" />
        <Label text="Votre choix:" />
        <RadioButton fx:id="radioOui" text="Oui" />
        <RadioButton fx:id="radioNon" text="Non" />
        <Button text="Sélectionner" onAction="#handleSelection" />
        <Label fx:id="labelStatus" />
    </children>
    <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
    </padding>
</VBox>